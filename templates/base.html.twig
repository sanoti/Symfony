<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <a href="{{ path('app_party_index') }}">Вечеринки</a>
        <a href="{{ path('app_guest_index') }}">Гости</a>
        <a href="{{ path('app_check_index') }}">Чеки</a>
        <a href="{{ path('app_personal_check_index') }}">Персональные чеки</a>
        <a href="{{ path('app_product_index') }}">Продукты</a>
        <a href="{{ path('app_payment_index') }}">Транзакции</a>
        <a href="{{ path('app_user_index') }}">Пользователи</a>

        <br>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <button> <a href="{{ path('app_logout') }}">Выйти</a> </button>
        {% else %}
            <button> <a href="{{ path('app_login') }}">Войти</a> </button>
        {% endif %}










        {% block body %}{% endblock %}

    </body>
</html>
