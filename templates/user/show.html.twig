{% extends 'base.html.twig' %}

{% block title %}Пользователь{% endblock %}

{% block body %}
    <h1>Пользователь</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Почта</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Роли</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Пароль</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <button> <a href="{{ path('app_user_role', {'id': user.id}) }}">Изменить роль</a> </button>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Изменить</a>

    <br>


    <a href="{{ path('app_user_index') }}">Назад</a>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
